# Copy this file to .env and fill values (do NOT commit real tokens to git)
# PRINTIFY_TOKEN should be set to your Printify Personal Access Token or OAuth token
PRINTIFY_TOKEN=
# SHOP_ID is the numeric ID of your Printify shop
SHOP_ID=
# Optional: custom background image URL for the merch page
BACKGROUND_IMAGE=
# Optional: set to 1 to bypass real-order confirmation (useful for tests)
SAFE_MODE=
# Optional: SendGrid (only used if provided and `send_confirmation_email` is set on checkout)
SENDGRID_API_KEY=
EMAIL_FROM=
# Optional: admin token to protect order viewing (set a long random string)
ADMIN_TOKEN=
